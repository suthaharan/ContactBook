@model Contact2015.Models.ViewModels.vmContact

@{
    ViewBag.Title = "Contacts";
    Layout = "~/Views/Shared/_AfterLogin.cshtml";
}
@section stylecontainer{

}
<!--main content start-->
<h3><i class="fa fa-database"></i> Manage Address Book</h3>

<!-- BASIC FORM ELELEMNTS -->
<div class="row mt">
    <div class="col-lg-8">
        <div class="form-panel">
            <h4 class="mb"><i class="fa fa-angle-right"></i> Add Contact Details</h4>
            @using (Html.BeginForm("edit", "contact", FormMethod.Post, new { @class = "form-horizontal style-form" }))
            {
                @Html.AntiForgeryToken()

                if (!Html.ViewData.ModelState.IsValid)
                {
                    <div class="alert adjusted alert-danger fade in">
                        <strong>Error!</strong>
                        @Html.ValidationSummary(false)
                    </div>
                }

                if (ViewBag.Success == 1)
                {
                    <div class="alert alert-success alert-dismissable">
                        <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                        <strong>@ViewBag.MessageTitle! </strong> @ViewBag.Message
                    </div>
                }

                <div class="form-group">
                    <label class="col-md-2 control-label" for="txtfirst">First name</label>
                    <div class="col-md-6">
                        @Html.TextBoxFor(Model => Model.txtfirst, new { @class = "form-control input-md", maxlength = "255" })
                        <span class="help-block">Enter first name</span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-md-2 control-label" for="txtlast">Last name</label>
                    <div class="col-md-6">
                        @Html.TextBoxFor(Model => Model.txtlast, new { @class = "form-control input-md", maxlength = "255" })
                        <span class="help-block">Enter last name</span>
                    </div>
                </div>

                <!-- Text input-->
                <div class="form-group">
                    <label class="col-md-2 control-label" for="txtphone">Phone number</label>
                    <div class="col-md-6">
                        @Html.TextBoxFor(Model => Model.txtphone, new { @class = "form-control input-md", maxlength = "255" })
                        <span class="help-block">Enter phone number</span>
                    </div>
                </div>

                <!-- Text input-->
                <div class="form-group">
                    <label class="col-md-2 control-label" for="txtstreet">Street name</label>
                    <div class="col-md-6">
                        @Html.TextBoxFor(Model => Model.txtstreet, new { @class = "form-control input-md", maxlength = "255" })
                        <span class="help-block">Address, street name</span>
                    </div>
                </div>

                <!-- Text input-->
                <div class="form-group">
                    <label class="col-md-2 control-label" for="txtcity">City</label>
                    <div class="col-md-6">
                        @Html.TextBoxFor(Model => Model.txtcity, new { @class = "form-control input-md", maxlength = "255" })
                        <span class="help-block">Enter city name</span>
                    </div>
                </div>

                <!-- Text input-->
                <div class="form-group">
                    <label class="col-md-2 control-label" for="txtprovince">Province</label>
                    <div class="col-md-6">
                        @Html.TextBoxFor(Model => Model.txtprovince, new { @class = "form-control input-md", maxlength = "255" })
                        <span class="help-block">Name of the province</span>
                    </div>
                </div>

                <!-- Text input-->
                <div class="form-group">
                    <label class="col-md-2 control-label" for="txtpostal">Postal code</label>
                    <div class="col-md-6">
                        @Html.TextBoxFor(Model => Model.txtpostal, new { @class = "form-control input-md", maxlength = "255" })
                        <span class="help-block">Enter postal code</span>
                    </div>
                </div>

                <!-- Select Basic -->
                <div class="form-group">
                    <label class="col-md-2 control-label" for="selcountry">Select country</label>
                    <div class="col-md-6">
                        <select id="selcountry" name="selcountry" class="form-control">
                            <option value="Canada" selected>Canada</option>
                            <option value="USA">USA</option>
                            <option value="United Kingdom">United Kingdom</option>
                            <option value="Australia">Australia</option>
                        </select>
                    </div>
                </div>

                <!-- Textarea -->
                <div class="form-group">
                    <label class="col-md-2 control-label" for="txtnotes">Notes</label>
                    <div class="col-md-6">
                        @Html.TextAreaFor(Model => Model.notes, new { @class = "ckeditor form-control", @id = "notes", @name = "notes"})
                    </div>
                </div>

                <!-- Button -->
                <div class="form-group">
                    <label class="col-md-2 control-label" for="btnSaveContact"></label>
                    <div class="col-md-6">
                        <button id="btnSaveContact" name="btnSaveContact" class="btn btn-primary">Save contact</button>
                    </div>
                </div>

            }
        </div>
    </div><!-- col-lg-12-->
</div><!-- /row -->

@section scriptsContainer{
<script src="~/assets/ckeditor/ckeditor.js" type="text/javascript"></script>
<script type="text/javascript">
    var editor = CKEDITOR.instances["notes"];
    if (editor) { editor.destroy(true); }
    CKEDITOR.replace("notes", {
        enterMode: CKEDITOR.ENTER_BR,
    });
    $('input[type=submit]').bind('click', function () {
        CKEDITOR.instances.notes.updateElement();
    });
</script>

}